<%- include('partials/header.ejs') %>
<div class="row d-flex justify-content-center text-center">
  <div class="col col-6 my-5">
    <% if (messages.error) { %>
    <h5><%= messages.error %></h5>
    <% } %>
    <h1 class="my-4 text-dark">FORM LOGIN</h1>
    <form action="/admin/signin" method="post">
      <input type="text" name="username" id="username" placeholder="Input username" class="form-control" />
      <br />
      <input type="password" name="password" id="password" placeholder="Password" class="form-control" />
      <br />
      <button type="submit" class="btn btn-primary form-control">SIGN IN</button>
      <p class="mt-3">Don't have an account ? <a href="/admin/register">Sign Up</a></p>
    </form>
  </div>
</div>
<%- include('partials/footer.ejs') %>

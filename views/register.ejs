<%- include('partials/header.ejs') %>
<div class="row d-flex justify-content-center text-center">
  <div class="col col-6 my-5">
    <h1 class="my-4 text-dark">FORM REGISTER</h1>
    <form action="/admin/register" method="post">
      <input type="text" name="username" id="username" placeholder="Input username" class="form-control" required />
      <br />
      <input type="password" name="password" id="password" placeholder="Password" class="form-control" required />
      <br />
      <input type="checkbox" name="isAdmin" id="isAdmin" />
      <span>Is admin</span>
      <button type="submit" class="btn btn-primary form-control">SIGN UP</button>
      <p class="mt-3">Have an account ? <a href="/">Sign In</a></p>
    </form>
  </div>
</div>
<%- include('partials/footer.ejs') %>
